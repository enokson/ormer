model User {
    id Int @id @default(autoincrement())
    // even if the relations are distinct, if there can only be one without a name
    posts Post[] @relation("postingUser")
    reviewingPosts Post[]
}

model Post {
    id Int @id
    // the side with one contains the no-relation directive error
    user User @relation("postingUser", fields: [userId], references: [id])
    userId Int
    reviewer User @relation(fields: [reviewerId], references: [id])
    reviewerId Int 
}